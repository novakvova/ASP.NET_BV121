@using ShopWeb.Constants;
<header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Carousel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Головна</a>
                    </li>
                    @if (User.IsInRole(Roles.Admin))
                    {
                        <li class="nav-item">
                            <a class="nav-link" 
                                asp-controller="Home" 
                                asp-action="Index"
                                asp-area="Admin">
                                Панель керування
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link disabled">Disabled</a>
                    </li>
                </ul>
                @if(User.Identity.IsAuthenticated)
                {
                    using (Html.BeginForm("Logout", "Account", FormMethod.Post,
                                new { id = "logoutForm", }))
                    {
                        @Html.AntiForgeryToken()
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a asp-controller="Profile" asp-action="Index" class="nav-link">Привіт @User.Identity.Name</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" onclick="document.getElementById('logoutForm').submit();"
                                    class="nav-link">
                                    @* @await Component.InvokeAsync("Test")*@
                                    Вихід
                                </a>
                            </li>
                        </ul>
                    }
                }
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="/account/register" class="nav-link">Реєстрація</a>
                        </li>
                        <li class="nav-item">
                            <a href="/account/login" class="nav-link">Вхід</a>
                        </li>
                    </ul>
                }
               
            </div>
        </div>
    </nav>
</header>